<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위젯의 가로match_parent, 세로wrap_content"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="310dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위젯의 크기, wrap_content"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="270dp" />

    <LinearLayout
        android:layout_width="218dp"
        android:layout_height="75dp"
        android:background="#F60303"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="350dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:background="#FF0000"
            android:text="background 색 설정"
            app:backgroundTint="#0037FF"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="401dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="168dp"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:padding="30dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="447dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Padding: 위젯요소와 경계선 사이 간격조절" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="162dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="43dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="성별 선택(id속성 확인)" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="65dp"
            android:layout_height="56dp"
            android:text="남성" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:text="여성" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="159dp"
        android:layout_height="224dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="447dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="layout_margin:위젯과 위젯사이 거리조절" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="위젯2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="193dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="733dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rotation="15"
            android:text="rotation: 각도조절" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="enabled: 위젯동작 여부" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="clickable:클릭가능여부" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>